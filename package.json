{
  "name": "imicros-rules",
  "version": "0.0.2",
  "description": "Execution service for rulesets",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage --no-cache"
  },
  "jest": {
    "collectCoverageFrom": [
      "lib/*.js",
      "lib/util/*.js",
      "!lib/globals.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dev/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dev/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/al66/imicros-rules.git"
  },
  "keywords": [
    "moleculer",
    "rules engine",
    "execution"
  ],
  "author": "Andreas Leinen <andreas.leinen@imicros.de> (www.imicros.de)",
  "license": "MIT",
  "devDependencies": {
    "jest": "^26.0.1",
    "moleculer": "^0.14.6"
  },
  "dependencies": {
    "imicros-rules-compiler": "^0.0.10"
  }
}
